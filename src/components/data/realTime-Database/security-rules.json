{
  "rules": {
    "games": {
      ".write": "auth !== null",
      "$gameId": {
        "metaData": {
          ".read": true,
          ".write": "root.child('admins').hasChild(auth.uid)",
          // ".write": true,
          ".validate": "newData.hasChildren(['opponent', 'date'])",
          "date": { ".validate": "newData.isString() && newData.val().matches(/^\\d{2}-\\d{2}-\\d{4}$/)" },
          // "opponent":{".validate":"newData.isString() && newData.val().contains('s')"},
          "opponent": { ".validate": "newData.isString()" },
          "isPublic": { ".validate": "newData.isBoolean()" },
          "$other": { ".validate": false }
        },
        "privateData": {
          "gameContent": {
            ".read": "data.parent().child('tickets').hasChild(auth.uid)",
            ".write": "data.parent().child('tickets').hasChild(auth.uid)"
          },
          "tickets": {
            "$uids": {
              ".read": "auth.uid === $uids",
              ".write": "auth.uid === $uids"
            }
          }
        }
      }
    },
    "admins": {
      ".read": true,
      ".write": true
    },
    "users": {
      "$user_id": {
        ".read": true
      }
    }
  }
}
